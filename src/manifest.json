{
	"update_url": "http://clients2.google.com/service/update2/crx",
	"name": "Proyal's Roblox Extension",
	"short_name": "PRE",
	"description": "The best QOL Roblox Extension out there.",
	"default_locale": "en",
	"author": "Proyal",
	"icons": { "16": "/images/logo16.png",
		   "48": "/images/logo48.png",
		  "128": "/images/logo128.png" },
	"version": "1.1.8",
	"permissions": [
		"notifications",
		"storage",
		"*://*.roblox.com/*",
		"*://*.ropro.io/*",
		"*://*.sapphirex.tk/*",
		"*://*.rbxcdn.com/*"
	],
	"content_scripts": [
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/trade.js",
				"/js/page/tradePreview.js"
			],
			"css": [
				"/css/page/trade.css"
			],
			"matches": [
				"*://*.roblox.com/trades*"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/profile.js",
				"/js/page/trade.js",
				"/js/page/profileThemes.js"
			],
			"css": [
				"/css/page/profile.css",
				"/css/page/trade.css"
			],
			"matches": [
				"*://*.roblox.com/users/*"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/item.js",
				"/js/page/comments.js",
				"/js/page/resellers.js",
				"/js/page/wishlist.js"
			],
			"css": [
				"/css/page/item.css",
				"/css/page/wishlist.css"
			],
			"matches": [
				"*://*.roblox.com/catalog/*"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/wishlistMain.js"
			],
			"css": [
				"/css/page/wishlistMain.css"
			],
			"matches": [
				"*://*.roblox.com/offers"
			],
			"run_at": "document_start"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/sandbox.js"
			],
			"css": [
				"/css/page/sandbox.css"
			],
			"matches": [
				"*://*.roblox.com/sandbox"
			],
			"run_at": "document_start"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/quickSearch.js",
				"/js/page/additionalMenuItems.js"
			],
			"css": [
				"/css/page/additionalMenuItems.css"
			],
			"matches": [
				"*://*.roblox.com/*"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/randomGame.js"
			],
			"css": [
				"/css/page/randomGame.css"
			],
			"matches": [
				"*://*.roblox.com/games#/","*://*.roblox.com/games/","*://*.roblox.com/games"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/gamePage.js",
				"/js/page/gameFilter.js"
			],
			"css": [
				"/css/page/gamePage.css",
				"/css/page/gameFilter.css"
			],
			"matches": [
				"*://*.roblox.com/games/*"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/groupPage.js"
			],
			"css": [
				"/css/page/gamePage.css"
			],
			"matches": [
				"*://*.roblox.com/groups/*"
			],
			"run_at": "document_end"
		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/rosearch.js",
				"/js/page/adblock.js"
			],
			"css": [
				"/css/page/rosearch.css"
			],
			"matches": [
				"*://*.roblox.com/*"
			],
			"run_at": "document_end"

		},
		{
			"js": [
				"/js/libraries/jquery-3.5.1.min.js",
				"/js/page/home.js"
			],
			"css": [
				"/css/page/home.css"
			],
			"matches": [
				"*://*.roblox.com/home*"
			],
			"run_at": "document_end"
		}
	],
	"background":
    {
		"scripts": [
			"/js/libraries/jquery-3.5.1.min.js",
			"background.js"
			],
		"persistent": true
    },
	"browser_action": {
		"default_title": "RoPro",
		"default_popup": "options.html"
	},
	"manifest_version": 2
}
